extends layout

block content
  .main.index
    .logo
      img(src='/img/logo.png')
    .fightBtn
      a(href='/fights')
        .addFight Add A Fight
    ul.menu
      li
        a(href='/highlights/general')
          .menuItem Highlights
      each p in tablePages
        li
          a(href='/tables/'+p[0])
            .menuItem #{p[1]}
      li
        a(href='/graphs/players')
          .menuItem Player Timeline
      li
        a(href='/graphs/characters')
          .menuItem Character Timeline
    #app
